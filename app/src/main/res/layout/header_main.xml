<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <Spinner
        android:id="@+id/languageSwitcher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/programming_languages_display"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/streak"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/streakCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="0"/>

        <ImageView
            android:src="@drawable/points"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/pointsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="0"/>

        <ImageView
            android:src="@drawable/heart"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/livesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="0"/>

        <ImageButton android:id="@+id/changeLanguageBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/language"
            android:contentDescription="@string/change_language"/>

<!--        <ImageButton-->
<!--            android:id="@+id/changeLanguageBtn"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:src="@drawable/language"-->
<!--            android:background="?attr/selectableItemBackgroundBorderless"-->
<!--            android:contentDescription="@string/change_language"/>-->
    </LinearLayout>
</LinearLayout>
